/**app.wxss**/

view, text, swiper, scroll-view, image {
  box-sizing: border-box;
}

.container {
  height: 100%;
  width: 100%;
  position: relative;
  box-sizing: border-box;
}

/* float */

.float_left {
  float: left;
}

.float_right {
  float: right;
}

/* color */

.color_1 {
  color: #d81e06;
}

.color_2 {
  color: #dbdbdb;
}
/* 两行省略 */
.app_two_line {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* app box */
.app_box{
  position: relative;
}
.app_box:not(:last-child) {
  margin-bottom: 20rpx;
}
.app_box:not(:last-child)::after {
  position: absolute;
  display: block;
  left: 0;
  right: 0;
  bottom: -20rpx;
  content: '';
  height: 10rpx;
  width: 100%;
  /* background: linear-gradient(-45deg, #d81e06, #0752dd); */
  border-top:1rpx solid #fafafa;
}
.app_box:hover{
  filter: opacity(0.85);
}