/* src/components/column/index.wxss */
@import '/app.wxss';

.box {
  border-bottom: 1rpx solid #fafafa;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  box-sizing: border-box;
  font-size: 30rpx;
}

.box_items {
  width: 25%;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
  /* border-bottom: 1px dotted #fafafa; */
}
.box_items > image {
  padding: 10rpx;
  width: 120rpx;
  height: 120rpx;
  margin: auto;
}
.box_items>.text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}